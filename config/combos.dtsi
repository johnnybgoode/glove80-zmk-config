#define COMBO_FIRING_DECAY 50
#define SHIFT_FIRING_DECAY 50

#define ZMK_COMBO_ALL(name, combo_bindings, keypos) \
  ZMK_COMBO(name, combo_bindings, keypos, ALL_LAYERS, COMBO_FIRING_DECAY)
#define ZMK_COMBO_BASE(name, combo_bindings, keypos) \
  ZMK_COMBO(name, combo_bindings, keypos, LAYER_Base, COMBO_FIRING_DECAY)
#define ZMK_COMBO_TYPE(name, combo_bindings, keypos) \
  ZMK_COMBO(name, combo_bindings, keypos, LAYER_Base LAYER_Typing, SHIFT_FIRING_DECAY)

ZMK_COMBO_BASE(cmd_tab_l, &mod_tab_chord _A_TAB LAYER_Cursor, LT1 LT4)
ZMK_COMBO_BASE(ctl_tab_l, &mod_tab_chord LCTL   LAYER_Cursor, LT2 LT5)
ZMK_COMBO_BASE(alt_tab_l, &mod_tab_chord _G_TAB LAYER_Cursor, LT3 LT6)

