// ZMK_COMBO_TYPE(sticky_shift_r, &sticky_key_modtap RSFT RSFT, RT1 RH4)
ZMK_COMBO_TYPE(caps_word_l, &caps_word, LT4 LT5)
ZMK_COMBO_TYPE(caps_word_r, &caps_word, RT4 RT5)
ZMK_COMBO_TYPE(caps_lock_l, &kp CAPSLOCK, LT5 LT6)
ZMK_COMBO_TYPE(caps_lock_r, &kp CAPSLOCK, RT5 RT6)
ZMK_COMBO_TYPE(toggle_typing, &tog LAYER_Typing, RL0 RB1)

ZMK_COMBO_ALL(base_reset_l, &to LAYER_Base, LT1 LT2 LT3)
ZMK_COMBO_ALL(base_reset_r, &to LAYER_Base, RT1 RT2 RT3)
